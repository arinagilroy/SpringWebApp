<html lang="En">
<meta name="_csrf" content={{_csrf.token}}>
<!-- default header name is X-CSRF-TOKEN -->
<meta name="_csrf_header" content={{_csrf.headerName}}>
<head>
    <title>Spring Boot Mustache employees</title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
    <style>
        table {
            border-collapse: collapse;
        }

        table, td, th {
            border: 1px solid #999;
            padding: 5px;
        }
    </style>
</head>
<body>
<h2>Employees</h2>

<div>
    <form action="/logout" method="post">
        <input style="background-color:rgba(0,0,0,0.1)" type="submit" value="Sing Out"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
    </form>
</div>

<div>
    <form>
        <input style="background-color:rgba(0,0,0,0.1)" type="button" value="Add user" class="show-button" id="addUser"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
    </form>

</div>


<table>
    <tr>
        <th>Emp Id</th>
        <th>Emp No</th>
        <th>Emp Name</th>
        <th>Who added</th>
    </tr>

    {{#employees}}
        <tr>
            <td>{{empId}}</td>
            <td>{{empNo}}</td>
            <td>{{empName}}</td>
            <td>{{authorName}}</td>
        </tr>
    {{/employees}}
</table>
<script src="/jsps/Main.js?1"></script>
</body>
</html>